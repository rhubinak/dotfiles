flatpak install flathub org.signal.Signal

# Terminalizer
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.37.2/install.sh | bash
nvm install node
npm i -g terminalizer

# PurgeCSS
npm i -g purgecss

# AWS CLI
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip awscliv2.zip
sudo ./aws/install

# Firefox: remove microphone indicator
# Set toolkit.legacyUserProfileCustomizations.stylesheets to True in about:config
cd ~/.mozilla/firefox/
if [[ $(grep '\[Profile[^0]\]' profiles.ini) ]]
then PROFPATH=$(grep -E '^\[Profile|^Path|^Default' profiles.ini | grep -1 '^Default=1' | grep '^Path' | cut -c6-)
else PROFPATH=$(grep 'Path=' profiles.ini | sed 's/^Path=//')
fi
mkdir $PROFPATH/chrome
echo "#webrtcIndicator {" >> $PROFPATH/chrome/userChrome.css
echo "  display: none;" >> $PROFPATH/chrome/userChrome.css
echo "}" >> $PROFPATH/chrome/userChrome.css
